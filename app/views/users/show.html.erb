<%= render partial: 'layouts/menu', locals: { parent: "#{@company.name.titleize}", child: @user.full_name } %>
<!-- DataTables Card-->
<div class="card mb-3">
  <div class="card-header">
  <i class="fa fa-user-o"></i> User Profile</div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-2">
        <%= image_tag(@user.icon, size: "150x150", alt: "avatar") %>
      </div>
      <div class="col-md-10">
        <div class="row">
          <div class="col-md-6">
            <h6>Name: <%= @user.full_name %></h6>
            <h6>Company: <%= @user.company.name.titleize %></h6>
            <h6>Email: <%= @user.email %></h6>
          </div>
          <div class="col-md-12">
            <h4 class="m-t-2"><span class="fa fa-clock-o ion-clock pull-xs-right"></span> Recent Job Postings</h4>
            <div class="table-responsive">
              <table class="table table-striped table-bordered" id="job-postings-table" width="100%" cellspacing="0">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Team</th>
                    <th scope="col">Salary Offer</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @user.company.job_postings.order('created_at DESC').take(5).each do |posting| %>
                  <tr>
                    <td><%= posting.title %></td>
                    <td><%= posting.team.name%></td>
                    <td><%= number_to_currency(posting.min_salary.to_f, delimiter: '', unit: '') %></td>
                    <td>
                      <%= link_to 'View', company_job_posting_path(@company, posting) %>
                      <%= link_to 'Edit', edit_company_job_posting_path(@company, posting) %>
                      <%= link_to 'Remove', company_job_posting_path(@company, posting), method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            
          </div>
          
          <div class="col-md-12">
            <div class="btn-group" role="group" aria-label="Basic example">
              <%= button_to 'Edit', edit_company_user_path(@company, @user), method: :get, class: "btn btn-primary" %>
              <%= button_to 'Remove my account', company_user_path(@company, @user), method: :delete, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>