<%= render partial: 'layouts/menu', locals: { parent: "#{@company.name.titleize}", child: "Teams" } %>

<!-- DataTables Card-->
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Teams</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered" id="job-postings-table" width="100%" cellspacing="0">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Status</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Set Inactive</th>
                  </tr>
                </thead>
                <tbody>
                  <% @teams.each do |team| %>
                  <tr>
                      <td><%= team.name %></td>
                      <td><%= team.status %></td>
                      <td><%= link_to "edit", edit_company_team_path(@company, team), class: "btn btn-sm btn-primary" %></td>
                      <td><%= link_to "disable", company_team_path(@company, team), method: :delete, remote: true, class: "btn btn-sm btn-danger" %></td>
                  </tr>
                  <% end %>
                </tbody>
            </table>
        </div>
        <%= link_to "Add a Team", new_company_team_path, class: "btn btn-md btn-primary" %>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
